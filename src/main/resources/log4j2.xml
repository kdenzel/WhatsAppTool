<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="de.kswmd.whatsapptool.cli">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <AdvancedConsole name="advancedConsole" showLines="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </AdvancedConsole>
        <RollingFile name="RollingFile" fileName="${sys:logFilePath}/log.txt"
                     filePattern="${sys:logFilePath}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <!--<SizeBasedTriggeringPolicy size="250 MB"/>-->
            </Policies>
        </RollingFile>
        <RollingFile name="HandleCronMessageJob" fileName="${sys:logFilePath}/message-job-error-log.txt"
                     filePattern="${sys:logFilePath}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}.message-job-error-log.txt">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <!--<SizeBasedTriggeringPolicy size="250 MB"/>-->
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="de.kswmd.whatsapptool.quartz.HandleCronMessageJob" level="error" additivity="false">
            <AppenderRef ref="advancedConsole"/>
            <AppenderRef ref="HandleCronMessageJob"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="de.kswmd.whatsapptool" level="info" additivity="false">
            <AppenderRef ref="advancedConsole"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="advancedConsole"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>